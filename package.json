{
  "name": "baby-things",
  "version": "1.0.0",
  "description": "random nice-to-have items generator for your baby",
  "main": "dist/index.js",
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "npm-run-all --parallel build:*",
    "build:main": "babel --copy-files --no-copy-ignored --out-dir dist --ignore src/**/*.test.js src",
    "build:umd": "webpack --output-filename index.umd.js",
    "build:umd.min": "webpack --output-filename index.umd.min.js -p",
    "commit": "git-cz",
    "lint": "eslint src",
    "test": "cross-env NODE_ENV=test nyc mocha",
    "test:watch": "mocha --watch",
    "validate": "npm-run-all --parallel test lint build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/robesansan/baby-things.git"
  },
  "keywords": [
    "baby",
    "things",
    "items",
    "nice-to-have",
    "buy"
  ],
  "files": [
    "dist"
  ],
  "author": "Roberto Sanchez Sancho <roberto.san.san@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/robesansan/baby-things/issues"
  },
  "homepage": "https://github.com/robesansan/baby-things#readme",
  "dependencies": {
    "unique-random-array": "2.0.0"
  },
  "devDependencies": {
    "@babel/cli": "7.8.4",
    "@babel/core": "7.9.6",
    "@babel/preset-env": "7.9.6",
    "@babel/register": "7.9.0",
    "babel-eslint": "10.1.0",
    "babel-loader": "8.1.0",
    "babel-plugin-istanbul": "6.0.0",
    "chai": "4.2.0",
    "commitizen": "4.1.2",
    "cross-env": "7.0.2",
    "cz-conventional-changelog": "3.2.0",
    "eslint": "6.8.0",
    "eslint-plugin-import": "2.20.2",
    "eslint-plugin-mocha": "6.3.0",
    "ghooks": "2.0.4",
    "mocha": "7.1.2",
    "npm-run-all": "4.1.5",
    "nyc": "15.0.1",
    "rimraf": "3.0.2",
    "validate-commit-msg": "2.14.0",
    "webpack": "4.43.0",
    "webpack-cli": "3.3.11"
  },
  "nyc": {
    "all": true,
    "check-coverage": true,
    "branches": 100,
    "function": 100,
    "lines": 100,
    "statements": 100,
    "reporter": [
      "text",
      "lcov"
    ],
    "include": [
      "src"
    ],
    "sourceMap": false,
    "instrument": false,
    "require": [
      "@babel/register"
    ]
  },
  "babel": {
    "presets": [
      "@babel/preset-env"
    ],
    "env": {
      "test": {
        "plugins": [
          "istanbul"
        ]
      }
    }
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    },
    "ghooks": {
      "commit-msg": "validate-commit-msg",
      "pre-commit": "npm run validate"
    }
  }
}
